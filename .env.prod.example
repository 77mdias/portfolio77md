NODE_ENV=production

# ==================
# üóÑÔ∏è DATABASE (Supabase)
# ==================
# Para Supabase, use a Connection String no formato:
# postgresql://[user]:[password]@[host]:[port]/[database]
#
# IMPORTANTE:
# - Porta 6543: Transaction Mode (pgBouncer) - recomendado para a maioria dos casos
# - Porta 5432: Session Mode (Direct Connection) - use se precisar de prepared statements
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-sa-east-1.pooler.supabase.com:6543/postgres
DATABASE_MAX_CONNECTIONS=10

# ==================
# üîê BETTER AUTH
# ==================
# Secret deve ter no m√≠nimo 32 caracteres
# Gere com: openssl rand -base64 32
